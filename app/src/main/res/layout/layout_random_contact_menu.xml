<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF">
    <TextView
        android:id="@+id/menu_basic_settings"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        android:text="@string/action_basic_settings"
        android:background="@drawable/menu_list_item_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#f6f9fe"/>

    <TextView
        android:id="@+id/menu_advanced_settings"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp"
        android:text="@string/action_advanced_settings"
        android:background="@drawable/menu_list_item_bg"/>
</LinearLayout>